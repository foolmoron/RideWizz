@model RideWizz.Models.CarsOutputModel
@{
    ViewBag.Title = "All Cars";
}

@section Scripts {
    @Scripts.Render("~/Scripts/Cars.js")
}

<div class="logo"><img src="~/Images/logo.png" title="RideWizz!" /></div>

<div class="header-text">Welcome to RideWizz, the premier randomly generated car data website on the internet!</div>

<div class="car-container">
    @foreach (var car in Model.AllCars) {
        <div class="car">
            <div>Year: @car.Year</div>
            <div>Make: @car.Make</div>
            <div>Model: @car.Model</div>
            <div>Price: @car.Price</div>
            <div>Mileage: @car.Mileage</div>
        </div>
    }
</div>